<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container_main_item">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/pokePicture"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8sp"/>

    <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            tools:text="Pokemon Name"
            android:textAlignment="center"
            android:id="@+id/pokeName"
            app:layout_constraintStart_toStartOf="@id/pokePicture"
            app:layout_constraintEnd_toEndOf="@id/pokePicture"
            app:layout_constraintTop_toBottomOf="@id/pokePicture"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>